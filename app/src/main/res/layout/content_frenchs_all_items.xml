<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/frenchsContentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="65dp"
    android:paddingBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/buttonFrenchClassic"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/French_classic"
            android:drawableStart="@drawable/ic_unknown"/>
        <Button
            android:id="@+id/buttonFrenchDijon"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/French_dijon"
            android:drawableStart="@drawable/ic_unknown"/>
        <Button
            android:id="@+id/buttonFrenchHoneyDijon"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/French_honey_dijon"
            android:drawableStart="@drawable/ic_unknown"/>
        <Button
            android:id="@+id/buttonFrenchHoney"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/French_honey"
            android:drawableStart="@drawable/ic_unknown"/>
        <Button
            android:id="@+id/buttonFrenchSpicy"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/French_spicy"
            android:drawableStart="@drawable/ic_unknown"/>
        <Button
            android:id="@+id/buttonFrenchWorcestershire"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/French_worcestershire"
            android:drawableStart="@drawable/ic_unknown"/>
    </LinearLayout>
</ScrollView>