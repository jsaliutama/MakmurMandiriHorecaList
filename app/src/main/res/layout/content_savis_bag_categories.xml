<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="65dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/buttonSavisBagAll"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/Savis_all_items"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <Button
            android:id="@+id/buttonSavisBagAromatic"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/Savis_aromatic_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <Button
            android:id="@+id/buttonSavisBagClassic"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/Savis_classic_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <Button
            android:id="@+id/buttonSavisBagFruit"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/Savis_fruit_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <Button
            android:id="@+id/buttonSavisBagHerb"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/Savis_herb_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <Button
            android:id="@+id/buttonSavisBagJapanese"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/Savis_japanese_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
    </LinearLayout>
</ScrollView>