<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/diamondContentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="65dp">
    <Button
        android:id="@+id/buttonDiamondAluminum"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="@string/Diamond_foil"
        android:drawableStart="@drawable/ic_unknown"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
    <Button
        android:id="@+id/buttonDiamondCling"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="@string/Diamond_cling"
        android:drawableStart="@drawable/ic_unknown"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
    <Button
        android:id="@+id/buttonDiamondHeavy"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="@string/Diamond_heavy"
        android:drawableStart="@drawable/ic_unknown"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
    <Button
        android:id="@+id/buttonDiamondFreezer"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="@string/Diamond_freezer"
        android:drawableStart="@drawable/ic_unknown"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
    <Button
        android:id="@+id/buttonDiamondStorage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="@string/Diamond_storage"
        android:drawableStart="@drawable/ic_unknown"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
</LinearLayout>