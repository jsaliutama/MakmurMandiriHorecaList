<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/spigadoroAllContentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="65dp"
    android:paddingBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/buttonSpigadoroFarfalle"
            android:drawableStart="@drawable/spigadoro_farfalle_s"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/Spigadoro_farfalle"/>
        <Button
            android:id="@+id/buttonSpigadoroFettuccine"
            android:layout_width="match_parent"
            android:drawableStart="@drawable/spigadoro_fettuccine_s"
            android:layout_height="150dp"
            android:text="@string/Spigadoro_fettuccine"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <Button
            android:id="@+id/buttonSpigadoroFusili"
            android:drawableStart="@drawable/spigadoro_fusilli_s"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/Spigadoro_fusili"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <Button
            android:id="@+id/buttonSpigadoroLasagna"
            android:drawableStart="@drawable/spigadoro_lasagna_s"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/Spigadoro_lasagna"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <Button
            android:id="@+id/buttonSpigadoroPenne"
            android:drawableStart="@drawable/spigadoro_penne_rigate_s"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/Spigadoro_penne"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <Button
            android:id="@+id/buttonSpigadoro002"
            android:drawableStart="@drawable/spigadoro_spaghettini_002_s"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/Spigadoro_b2_002"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <Button
            android:id="@+id/buttonSpigadoro003"
            android:drawableStart="@drawable/spigadoro_spaghettini_003_s"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/Spigadoro_b2_003"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
    </LinearLayout>
</ScrollView>